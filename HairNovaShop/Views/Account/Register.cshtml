@model HairNovaShop.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - HairNovaShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/head.css" />
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="marquee-content">
            <span>⚡️ GIẢM GIÁ SỐC 20% TOÀN BỘ SẢN PHẨM — HÀNG MỚI VỀ — MIỄN PHÍ VẬN CHUYỂN CHO ĐƠN TỪ 59K ⚡️ CHÀO MỪNG BẠN ĐẾN VỚI HAIRNOVA ⚡️</span>
        </div>
    </div>

    <!-- Header -->
    <header>
        <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" alt="Logo HairNova" style="width: 180px; height: auto;">
        </a>
        <nav>
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li><a href="#">Cửa hàng</a></li>
                <li><a href="#">Tin tức</a></li>
                <li><a href="#">Giới thiệu</a></li>
                <li><a href="#">Liên hệ</a></li>
                <li><a href="#">Chính sách</a></li>
            </ul>
        </nav>
        <div class="header-actions">
            <a href="#" class="icon-btn" title="Tìm kiếm">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </a>
            <a href="#" class="icon-btn" title="Yêu thích">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
            </a>
            <a href="#" class="icon-btn" title="Giỏ hàng">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
            </a>
            <a asp-controller="Account" asp-action="Login" class="icon-btn" title="Tài khoản">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </a>
        </div>
    </header>

    <!-- Nền bong bóng -->
    <div class="bg-bubbles">
        <span class="bubble b1"></span>
        <span class="bubble b2"></span>
        <span class="bubble b3"></span>
        <span class="bubble b4"></span>
        <span class="bubble b5"></span>
        <span class="bubble b6"></span>
    </div>

    <!-- Layout hai bên -->
    <div class="register-layout">
        <!-- Panel trái -->
        <section class="register-left-panel">
            <div class="blob-layer">
                <div class="blob blob-1"></div>
                <div class="blob blob-2"></div>
                <div class="blob blob-3"></div>
            </div>
            <div class="register-left-inner">
                <div class="register-logo">
                    <img src="~/images/logo.png" alt="Hairnova" class="register-logo-img" />
                </div>
                <h2 class="register-heading">Chào mừng bạn đến với Hairnova</h2>
                <p class="register-desc">
                    Tạo tài khoản để đặt lịch, theo dõi lịch sử dịch vụ và nhận
                    ưu đãi chăm sóc tóc được cá nhân hoá cho riêng bạn.
                </p>
            </div>
        </section>

        <!-- Card form bên phải -->
        <section class="auth-card auth-card-register">
            <h1 class="auth-title">Đăng ký</h1>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form class="auth-form" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="auth-input-group">
                    <label asp-for="FullName">Họ và tên</label>
                    <div class="auth-input-wrapper">
                        <input type="text" asp-for="FullName" placeholder="Nhập họ và tên" required />
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="auth-input-group">
                    <label asp-for="Phone">Số điện thoại</label>
                    <div class="auth-input-wrapper">
                        <input type="tel" asp-for="Phone" placeholder="Nhập số điện thoại" required />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="auth-input-group">
                    <label asp-for="Email">Email</label>
                    <div class="auth-input-wrapper">
                        <input type="email" asp-for="Email" placeholder="Nhập email" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="auth-input-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <div class="auth-input-wrapper">
                        <input type="password" asp-for="Password" placeholder="Nhập mật khẩu" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="auth-input-group">
                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <div class="auth-input-wrapper">
                        <input type="password" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu" required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="auth-btn">
                    Tạo tài khoản
                </button>

                <div class="auth-footer" style="margin-top: 16px;">
                    <span>Đã có tài khoản?</span>
                    <a asp-action="Login" class="auth-link-highlight">Đăng nhập ngay</a>
                </div>
            </form>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
