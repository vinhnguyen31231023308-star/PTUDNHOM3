@model HairNovaShop.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <h1>Chỉnh sửa sản phẩm</h1>
    <p>Cập nhật thông tin sản phẩm #@Model.Id</p>
</div>

<div class="admin-card">
    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <div class="col-md-8">
                <label asp-for="Name" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CategoryId" class="form-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Giá bán <span class="text-danger">*</span></label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="OriginalPrice" class="form-label">Giá gốc</label>
                <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="SKU" class="form-label">SKU</label>
                <input asp-for="SKU" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Stock" class="form-label">Tồn kho</label>
                <input asp-for="Stock" type="number" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="Brand" class="form-label">Thương hiệu</label>
                <input asp-for="Brand" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Origin" class="form-label">Xuất xứ</label>
                <input asp-for="Origin" class="form-control" />
            </div>
            <div class="col-md-4">
                <label asp-for="Capacity" class="form-label">Dung tích</label>
                <input asp-for="Capacity" class="form-control" placeholder="VD: 30ml, 60ml, 80ml, 100ml" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Tags" class="form-label">Tags</label>
                <input asp-for="Tags" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="ExpiryDate" class="form-label">Hạn sử dụng</label>
                <input asp-for="ExpiryDate" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả ngắn</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="DetailedDescription" class="form-label">Mô tả chi tiết</label>
            <textarea asp-for="DetailedDescription" class="form-control" rows="6"></textarea>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="mainImage" class="form-label">Hình ảnh chính (để trống nếu không thay đổi)</label>
                <input type="file" name="mainImage" id="mainImage" class="form-control" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.MainImage))
                {
                    <div class="mt-2">
                        <img src="@Model.MainImage" alt="Current" style="max-width: 200px; border-radius: 4px;" />
                    </div>
                }
            </div>
            <div class="col-md-6">
                <label for="images" class="form-label">Thêm hình ảnh phụ</label>
                <input type="file" name="images" id="images" class="form-control" accept="image/*" multiple />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">Hoạt động</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                    <label asp-for="IsFeatured" class="form-check-label">Nổi bật</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="IsNew" class="form-check-input" type="checkbox" />
                    <label asp-for="IsNew" class="form-check-label">Sản phẩm mới</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="OnSale" class="form-check-input" type="checkbox" />
                    <label asp-for="OnSale" class="form-check-label">Đang giảm giá</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn admin-btn-primary">
                <i class="fas fa-save me-2"></i>Cập nhật
            </button>
            <a asp-action="Products" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy
            </a>
        </div>
    </form>
</div>
