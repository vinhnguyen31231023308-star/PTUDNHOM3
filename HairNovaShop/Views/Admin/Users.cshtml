@model List<HairNovaShop.Models.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 150px;">
    <h1>Quản lý người dùng</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Vai trò</th>
            <th>Ngày tạo</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>
                    @if (user.Role == HairNovaShop.Models.Role.Admin)
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">User</span>
                    }
                </td>
                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (user.Role == HairNovaShop.Models.Role.Admin)
                    {
                        <a asp-action="RemoveAdmin" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Gỡ Admin</a>
                    }
                    else
                    {
                        <a asp-action="SetAdmin" asp-route-id="@user.Id" class="btn btn-success btn-sm">Cấp Admin</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
