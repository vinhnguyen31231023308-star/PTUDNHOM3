@{
    ViewData["Title"] = "Home";
}

<!-- ===== HERO ===== -->
<header class="homepage-hero d-flex align-items-center justify-content-center text-center mb-5">
    <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"></div>
    <div class="container position-relative z-1">
        <h1 class="display-3 fw-bold mb-3 text-white">Shop&nbsp;Bold.<br class="d-md-none" />Live&nbsp;Bright.</h1>
        <p class="lead mb-4 text-white">Discover New Tech, accessories &amp; more — all in one place.</p>
        <a href="/Products" class="btn btn-light btn-lg px-5 rounded-pill shadow-sm">Shop Now</a>
    </div>
</header>

<!-- ===== CATEGORY GRID ===== -->
<section class="container category-grid py-5">
    <h2 class="text-center mb-5 fw-semibold">Shop by Category</h2>

    <div class="row g-4">
        <!-- Mac -->
        <div class="col-6 col-md-4">
            <a href="/Products?category=Mac" class="category-card d-block rounded overflow-hidden text-decoration-none">
                <img src="~/pics/Apple 2024 MacBook Air 13-inch Laptop with M3 chip.jpg"
                     class="w-100 h-100 object-fit-cover" alt="Mac">
                <span class="category-label">Mac</span>
            </a>
        </div>

        <!-- iPhone -->
        <div class="col-6 col-md-4">
            <a href="/Products?category=iPhone" class="category-card d-block rounded overflow-hidden text-decoration-none">
                <img src="~/pics/1,776 likes, 39 comments - miamitechnologyusa στις….jpg"
                     class="w-100 h-100 object-fit-cover" alt="iPhone">
                <span class="category-label">iPhone</span>
            </a>
        </div>

        <!-- Accessories -->
        <div class="col-6 col-md-4">
            <a href="/Products?category=Accessories" class="category-card d-block rounded overflow-hidden text-decoration-none">
                <img src="~/pics/The Leather Laptop Backpacks.jpg"
                     class="w-100 h-100 object-fit-cover" alt="Accessories">
                <span class="category-label">Accessories</span>
            </a>
        </div>
    </div>
</section>

<!-- ===== PROMO BANNER ===== -->
<section class="promo-banner text-center py-5 text-bg-dark mb-5">
    <div class="container">
        <h3 class="fw-bold mb-2">FREE Shipping on Orders Over R500</h3>
        <p class="mb-0">No codes, no fuss. Just checkout and save.</p>
    </div>
</section>

<!-- ===== FEATURED PRODUCTS ===== -->
<section class="container featured-products py-5">
    <h2 class="text-center mb-5 fw-semibold">Trending Now</h2>

    <div class="row g-4">
        <!-- MacBook -->
        <div class="col-6 col-md-3">
            <div class="product-card p-3 rounded shadow-sm h-100">
                <img src="~/pics/Apple 2024 MacBook Air 13-inch Laptop with M3 chip.jpg"
                     class="w-100 rounded mb-3" alt="MacBook">
                <h6 class="fw-bold mb-1">MacBook</h6>
                <p class="small text-muted mb-2">R29 900</p>
                <a href="/Products/Details/1" class="btn btn-sm btn-dark w-100 rounded-pill">View</a>
            </div>
        </div>

        <!-- iPhone -->
        <div class="col-6 col-md-3">
            <div class="product-card p-3 rounded shadow-sm h-100">
                <img src="~/pics/1,776 likes, 39 comments - miamitechnologyusa στις….jpg"
                     class="w-100 rounded mb-3" alt="iPhone">
                <h6 class="fw-bold mb-1">iPhone</h6>
                <p class="small text-muted mb-2">R7 990</p>
                <a href="/Products/Details/2" class="btn btn-sm btn-dark w-100 rounded-pill">View</a>
            </div>
        </div>

        <!-- Leather Backpack -->
        <div class="col-6 col-md-3">
            <div class="product-card p-3 rounded shadow-sm h-100">
                <img src="~/pics/The Leather Laptop Backpacks.jpg"
                     class="w-100 rounded mb-3" alt="Leather Backpack">
                <h6 class="fw-bold mb-1">Leather Backpack</h6>
                <p class="small text-muted mb-2">R1 199</p>
                <a href="/Products/Details/3" class="btn btn-sm btn-dark w-100 rounded-pill">View</a>
            </div>
        </div>

        <!-- AirPods -->
        <div class="col-6 col-md-3">
            <div class="product-card p-3 rounded shadow-sm h-100">
                <img src="~/pics/Photo by Sophia Stark on Unsplash.jpg"
                     class="w-100 rounded mb-3" alt="AirPods">
                <h6 class="fw-bold mb-1">AirPods</h6>
                <p class="small text-muted mb-2">R1 999</p>
                <a href="/Products/Details/4" class="btn btn-sm btn-dark w-100 rounded-pill">View</a>
            </div>
        </div>
    </div>
</section>

<!-- ===== NEWSLETTER ===== -->
<section class="newsletter-signup py-5 bg-light">
    <div class="container text-center">
        <h3 class="fw-bold mb-3">Join &amp; Save 10% on Your First Order</h3>
        <p class="text-muted mb-4">Be first to know about drops, promos &amp; more.</p>
        <form class="row g-2 justify-content-center" asp-controller="Newsletter" asp-action="Subscribe" method="post">
            <div class="col-md-4">
                <input type="email" name="email" class="form-control form-control-lg rounded-pill shadow-sm"
                       placeholder="Your email address" required />
            </div>
            <div class="col-md-auto">
                <button type="submit" class="btn btn-dark btn-lg px-4 rounded-pill shadow-sm">Subscribe</button>
            </div>
        </form>
    </div>
</section>

<!-- ===== PAGE‑SPECIFIC CSS ===== -->
<style>
/* ===== HERO ===== */
.homepage-hero {
    min-height: 70vh;
    background: url('@Url.Content("~/pics/hero-tech-bg.jpg")') center center / cover no-repeat;
    position: relative;
}
.hero-overlay {
    background: rgba(0, 0, 0, 0.5); /* Dark overlay for text readability */
}

.homepage-hero h1,
.homepage-hero p {
    color: #fff;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.6);
}

/* ===== CATEGORY CARDS ===== */
.category-card {
    position: relative;
    transition: transform .2s, box-shadow .2s;
}
.category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 .4rem 1rem rgba(0,0,0,.15);
}
.category-label {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    padding: .35rem 1.2rem;
    border-radius: 50rem;
    font-weight: 700;
    letter-spacing: .05em;
    color: #000;
}

/* ===== PRODUCT CARDS ===== */
.product-card img {
    aspect-ratio: 1/1;
    object-fit: cover;
}
.product-card:hover {
    box-shadow: 0 .4rem 1rem rgba(0,0,0,.15);
}

/* Helper */
.object-fit-cover {
    object-fit: cover;
}
</style>
