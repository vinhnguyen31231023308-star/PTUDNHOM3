<section class="product-section hidden-up delay-200">
    <div class="container">
        <div class="prod-header">
            <div class="header-left">
                <span class="subtitle">Sản Phẩm Của Chúng Tôi</span>
                <h2 class="prod-title">Sản Phẩm <span>Chạy Nhất</span></h2>
            </div>
            <div class="prod-tabs">
                <button class="tab-btn active">Tất cả</button>
                <button class="tab-btn">Dầu Gội</button>
                <button class="tab-btn">Dầu Xả</button>
                <button class="tab-btn">Dầu Dưỡng</button>
                <button class="tab-btn">Thuốc Nhuộm</button>
            </div>
            <a href="#" class="view-all-btn">
                Xem Cửa Hàng
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
            </a>
        </div>

        <div class="slider-wrapper">
            <button class="slider-btn prev" onclick="moveSlider(-1)">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
            </button>
            <button class="slider-btn next" onclick="moveSlider(1)">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
            </button>


            <!-- SẢN PHẨM BÁN CHẠY -->
            <div class="slider-track" id="productTrack">
                @foreach (var p in Model.BestSellerProducts)
                {
                    var mainImg = p.MainImagePath ?? Url.Content("~/img/imghome/DG1.png");
                    var firstOption = p.VolumeOptions?.OrderBy(vo => vo.Price).FirstOrDefault();
                    <div class="product-card">
                        <div class="prod-img-box">
                            @* Badge giảm giá, tạm để "HOT" nếu có IsFeatured *@
                            @if (p.IsFeatured == true)
                            {
                                <span class="sale-badge" style="background:#e74c3c;">HOT</span>
                            }

                            <img src="@mainImg" alt="@p.Name" class="prod-img" />

                            @* Countdown tạm ẩn nếu chưa có dữ liệu *@
                            @* <div class="countdown-overlay">...</div> *@

                            <div class="action-icons">
                                <button class="action-btn" title="Thêm yêu thích">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                    </svg>
                                </button>
                                <button class="action-btn" title="Thêm vào giỏ"
                                        onclick="addToCart(@p.ProductId)">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="prod-info">
                            <div class="info-top-row">
                                <div class="prod-cat">@p.Category?.Name</div>
                                <div class="prod-rating">★ @p.AverageRating.ToString("0.0"))</div>
                            </div>
                            <h3 class="prod-name">@p.Name</h3>

                            @if (firstOption != null)
                            {
                                <div class="prod-price">
                                    @((firstOption.Price ?? 0m).ToString("N0"))
                                    @* nếu có giá gốc, bạn thêm old-price ở đây *@
                                </div>
                            }
                            else
                            {
                                <div class="prod-price">Liên hệ</div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- HẾT SẢN PHẨM BÁN CHẠY -->

            
        </div>
    </div>
</section>
<section class="deals-section hidden-up delay-200">
    <div class="container">

        <div class="deals-header ">
            <span class="subtitle">Nhanh tay đón nhận</span>
            <h2 class="section-title">Ưu Đãi Giới Hạn</h2>
        </div>
        
        
        <!-- VOUCER -->
        <div class="coupon-grid">
            @foreach (var v in Model.ActiveVouchers)
            {
                <div class="coupon-card">
                    <div class="coupon-icon-box">
                        <!-- icon giữ như cũ -->
                        <svg viewBox="0 0 24 24"><path d="..." /></svg>
                    </div>
                    <div class="coupon-info">
                        <div class="coupon-amount">@v.Description</div>  @* Không có tên mã nên lấy mô tả. ví dụ: "GIẢM 20K", "SALE 15%" *@
                        <div class="coupon-desc">@v.Description</div>
                        <div class="coupon-divider"></div>
                        <div class="coupon-action">
                            <span class="coupon-code">Mã: @v.Code</span>
                            <button class="copy-btn" onclick="copyCode(this, '@v.Code')">SAO CHÉP</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- HẾT VOUCHER -->

    </div>
</section>
