@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HairNova</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700;800&family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/header.css" />
</head>
<body class="home">
    <div class="top-bar">
        <div class="marquee-content">
            <span>⚡️ GIẢM GIÁ SỐC 20% TOÀN BỘ SẢN PHẨM — HÀNG MỚI VỀ — MIỄN PHÍ VẬN CHUYỂN CHO ĐƠN TỪ 59K ⚡️ CHÀO MỪNG BẠN ĐẾN VỚI HAIRNOVA ⚡️</span>
        </div>
    </div>

    <header>
        <a href="index.html" class="logo">
            <img src="~/images/LOGO.png" alt="Logo HairNova" style="width: 180px; height: auto;" asp-append-version="true">
        </a>

        <nav>
            <ul>
                <li><a href="index.html">Trang chủ</a></li>

                <li class="nav-item-dropdown">
                    <a href="shop.html" class="active">Cửa hàng <i class="fa-solid fa-angle-down" style="font-size: 12px; margin-left: 4px;"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Dầu gội</a></li>
                        <li><a href="#">Dầu xả</a></li>
                        <li><a href="#">Dưỡng tóc</a></li>
                        <li><a href="#">Thuốc nhuộm</a></li>
                    </ul>
                </li>

                <li><a href="news.html">Tin tức</a></li>
                <li><a href="aboutus.html">Giới thiệu</a></li>
                <li><a href="contact.html">Liên hệ</a></li>
                <li><a href="policy.html">Chính sách</a></li>
            </ul>
        </nav>

        <div class="header-actions">
            <button class="icon-btn" title="Tìm kiếm" id="searchBtn">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            </button>

            <button class="icon-btn" title="Yêu thích">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
                <span class="badge-count">2</span>
            </button>
            <button class="icon-btn" title="Giỏ hàng">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" /></svg>
                <span class="badge-count cart-badge">3</span>
            </button>
            <button class="icon-btn" title="Tài khoản">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
            </button>
        </div>
    </header>

    <div class="search-overlay" id="searchOverlay">
        <div class="search-box-content">
            <button class="close-search" id="closeSearchBtn">
                <i class="fa-solid fa-xmark"></i>
            </button>

            <div class="search-input-wrapper">
                <i class="fa-solid fa-magnifying-glass search-icon-input"></i>
                <input type="text" placeholder="Tìm kiếm sản phẩm..." id="searchInput">
            </div>

            <button class="btn-search-submit">Tìm kiếm</button>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div class="container">
            <div class="alert alert-success text-center" role="alert">
                ✅ Logged in as <strong>Admin</strong>
            </div>
        </div>
    }

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-verb-style">

        <div class="container pt-5 pb-4">
            <div class="row">

                <div class="col-lg-4 col-md-12 mb-5 mb-lg-0">
                    <h2 class="footer-heading mb-3">Kết nối với HairNova</h2>
                    <div class="footer-message-box">
                        <p>"Vẻ đẹp thực sự bắt nguồn từ sự thấu hiểu và trân trọng bản thân. Hãy để HairNova đồng hành cùng mái tóc bạn."</p>
                    </div>
                    <div class="footer-socials mt-4">
                        <a href="#" class="social-circle"><i class="fab fa-tiktok"></i></a>
                        <a href="#" class="social-circle"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-circle"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-circle"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>

                <div class="col-lg-8 col-md-12">
                    <div class="row">
                        <div class="col-md-4 col-6 mb-4">
                            <h5 class="link-heading">Cửa hàng</h5>
                            <ul class="footer-links">
                                <li><a href="#">Dầu gội</a></li>
                                <li><a href="#">Dầu xả</a></li>
                                <li><a href="#">Dầu dưỡng</a></li>
                                <li><a href="#">Thuốc nhuộm</a></li>

                            </ul>
                        </div>
                        <div class="col-md-4 col-6 mb-4">
                            <h5 class="link-heading">Hỗ trợ</h5>
                            <ul class="footer-links">
                                <li><a href="#">Chính sách thanh toán</a></li>
                                <li><a href="#">Chính sách bảo hành và đổi trả</a></li>
                                <li><a href="#">Chính sách bảo mật</a></li>
                                <li><a href="#">Chính sách vận chuyển</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4 col-6 mb-4">
                            <h5 class="link-heading">Liên hệ</h5>
                            <ul class="footer-links">
                                <li><a href="#">🗺️ 279 Nguyễn Tri Phương, Quận 10</a></li>
                                <li><a href="#">📞 0387 211 431</a></li>
                                <li><a href="#">📩 hairnova@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="waves-container">
            <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                 viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
                <defs>
                    <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
                </defs>
                <g class="parallax">
                    <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(0, 75, 176, 0.3)" />
                    <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(0, 75, 176, 0.5)" />
                    <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(0, 75, 176, 0.7)" />
                    <use xlink:href="#gentle-wave" x="48" y="7" fill="var(--bs-primary-dark)" />
                </g>
            </svg>
        </div>

        <div class="footer-bottom-dark">
            <div class="container text-center">

                <div class="big-brand-box">
                    <img src="~/images/LOGOdark.png" alt="HairNova Logo" class="footer-brand-img">
                </div>

                <div class="copyright-text mt-4">
                    &copy; 2025 HAIRNOVA VIETNAM | ALL RIGHTS RESERVED
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/header.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
